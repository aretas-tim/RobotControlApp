<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.robotcontrol.MainActivity"
    tools:layout_editor_absoluteY="73dp">

    <SeekBar
        android:id="@+id/speedBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="442dp"
        android:layout_height="37dp"
        android:layout_marginEnd="45dp"
        android:max="3"
        android:progress="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fast_Label" />

    <Button
        android:id="@+id/up_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginBottom="66dp"
        android:layout_marginEnd="8dp"
        android:text="F"
        app:layout_constraintBottom_toTopOf="@+id/down_button"
        app:layout_constraintEnd_toStartOf="@+id/NW_button" />

    <Button
        android:id="@+id/down_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:text="B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/SW_button" />

    <Button
        android:id="@+id/right_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="176dp"
        android:text="R"
        app:layout_constraintBottom_toTopOf="@+id/SW_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/left_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="220dp"
        android:text="L"
        app:layout_constraintBottom_toTopOf="@+id/SE_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/NW_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="176dp"
        android:text="FR"
        app:layout_constraintBottom_toTopOf="@+id/right_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/SW_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="176dp"
        android:text="BR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/NE_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="220dp"
        android:text="FL"
        app:layout_constraintBottom_toTopOf="@+id/left_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/SE_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="220dp"
        android:text="BL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/SPEED_label"
        android:layout_width="102dp"
        android:layout_height="20dp"
        android:layout_marginEnd="215dp"
        android:text="SPEED"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speedBar" />

    <TextView
        android:id="@+id/Fast_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="16dp"
        android:text="Fast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Slow_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:text="Slow"
        app:layout_constraintStart_toEndOf="@+id/Medium_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Medium_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="94dp"
        android:layout_marginTop="16dp"
        android:text="Medium"
        app:layout_constraintStart_toEndOf="@+id/Off_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Off_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:text="Off"
        app:layout_constraintBottom_toTopOf="@+id/speedBar"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
