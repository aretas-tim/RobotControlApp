<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.robotcontrol.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <SeekBar
        android:id="@+id/speedBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="305dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="14dp"
        android:max="3"
        android:progress="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fast_Label" />

    <Button
        android:id="@+id/up_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginTop="104dp"
        android:text="F"
        app:layout_constraintEnd_toStartOf="@+id/NW_button"
        app:layout_constraintTop_toBottomOf="@+id/SPEED_label" />

    <Button
        android:id="@+id/down_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginBottom="109dp"
        android:text="B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/SW_button" />

    <Button
        android:id="@+id/right_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginEnd="104dp"
        android:text="R"
        app:layout_constraintBottom_toTopOf="@+id/SW_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/left_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginStart="76dp"
        android:text="L"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NE_button" />

    <Button
        android:id="@+id/NW_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginEnd="104dp"
        android:layout_marginTop="104dp"
        android:text="FR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SPEED_label" />

    <Button
        android:id="@+id/SW_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginBottom="109dp"
        android:layout_marginEnd="104dp"
        android:text="BR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/NE_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="104dp"
        android:text="FL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SPEED_label" />

    <Button
        android:id="@+id/SE_button"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginBottom="109dp"
        android:layout_marginStart="76dp"
        android:text="BL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/SPEED_label"
        android:layout_width="111dp"
        android:layout_height="28dp"
        android:layout_marginEnd="124dp"
        android:layout_marginTop="14dp"
        android:text="SPEED"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speedBar" />

    <TextView
        android:id="@+id/Fast_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="30dp"
        android:text="Fast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Slow_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="56dp"
        android:text="Slow"
        app:layout_constraintBottom_toTopOf="@+id/speedBar"
        app:layout_constraintStart_toEndOf="@+id/Medium_label" />

    <TextView
        android:id="@+id/Medium_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="51dp"
        android:text="Medium"
        app:layout_constraintBottom_toTopOf="@+id/speedBar"
        app:layout_constraintStart_toEndOf="@+id/Off_label" />

    <TextView
        android:id="@+id/Off_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="28dp"
        android:text="Off"
        app:layout_constraintBottom_toTopOf="@+id/speedBar"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
